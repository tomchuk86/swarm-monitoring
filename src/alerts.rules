groups:
- name: system-alerts
  rules:
  - alert: LowAvailableMemory
    expr: (node_memory_MemAvailable_bytes / 1024 / 1024) < 100
    for:1m
    labels:
      severity: critical
    annotations:
      summary: "Available memory critically low (instance {{ $labels.instance }})"
      description: "Available memory is {{ $value | humanize }}MB (< 100MB)"

  - alert: HighMemoryUsage
    expr: (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / 1024 / 1024 / 1024 > 1
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: "High memory usage (instance {{ $labels.instance }})"
      description: "Memory usage is {{ $value | humanize }}GB (> 1GB)"

  - alert: HighCPUUsage
    expr: 100 - (avg by(instance)(irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 10
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: "High CPU usage (instance {{ $labels.instance }})"
      description: "CPU usage is {{ $value | humanize }}% (> 10%)"